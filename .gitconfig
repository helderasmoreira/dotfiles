[core]
	pager = less -R
	excludesfile = /Users/heldermoreira/.gitignore_global
[alias]
	st = status
	ci = commit -v
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	unpushed = !GIT_CURRENT_BRANCH=$(git name-rev --name-only HEAD) && git log origin/$GIT_CURRENT_BRANCH..$GIT_CURRENT_BRANCH --oneline
	staged = diff --cached
	aa = add -A -v
	dsf = "!git diff --color $@ | diff-so-fancy | less --tabs=1,5 -RFX"
[push]
	default = simple
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "status"]
	added = yellow
	changed = red
	untracked = cyan
[branch]
	autosetupmerge = true
[commit]
	gpgsign = true
